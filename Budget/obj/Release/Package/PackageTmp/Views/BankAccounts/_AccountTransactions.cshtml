@model IEnumerable<Budget.Models.Transaction>

@{
    ViewBag.Title = "_AccountTransactions";
}


<br />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Transactions
                <div class="pull-right">
                    @Html.ActionLink("New Transaction", "Create", "Transactions", new { id = Model.First().BankAccountId }, new { @class = "btn btn-default heading-button" })
                </div>
            </div>

            <table class="table" id="transactionTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        @*<th>
                    @Html.DisplayNameFor(model => model.IsReconciled)
                </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.Name)
                            </td>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.IsReconciled)
                    </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Transactions", new { id = item.Id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Delete", "Delete", "Transactions", new { id = item.Id }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

