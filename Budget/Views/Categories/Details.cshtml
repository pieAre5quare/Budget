@model Budget.Models.CatDetailsVM

@{
    ViewBag.Title = "Details";
}


<br /><br />
<div class="row">
    <div class="col-md-12 text-center">
        <div class="bank-heading">
            @Html.DisplayFor(model => model.Category.Name)
        </div>
        @if(Model.Category.BudgetedAmount != null) { 
        <div class="bank-balance">
            Budget used:
            @Html.DisplayFor(model => model.BudgetUsed)
            <text>Of</text>
            @Html.DisplayFor(model => model.Category.BudgetedAmount)
        </div>
        }
    </div>
</div>

<br /><br />


<div>
    @Html.Action("_CatTransactions", new { id = Model.Category.Id })
</div>

