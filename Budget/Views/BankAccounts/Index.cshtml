@model IEnumerable<Budget.Models.BankAccount>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Bank Accounts
                <div class="pull-right">
                    @Html.ActionLink("Create Account", "Create",null, new { @class = "btn btn-sm btn-default heading-button" })
                </div>
            </div>
            <div class="panel-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Balance)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
            {
                if (!item.IsArchived)
                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Balance)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }
                    }

                </table>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="panel panel-default">  
            <div class="panel-heading">
                Archived Accounts
            </div>       
            <div class="panel-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Balance)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
            {
                if (item.IsArchived)
                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Balance)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }
                    }

                </table>
            </div>
        </div>
    </div>
</div>