@model Budget.Models.Household

@{
    ViewBag.Title = "Details";
}

<br /><br />
<div class="row">
    <div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Household Members
                        </div>
                        <div class="panel-body">
                            @foreach (var user in Model.Users)
                            {
                                <text> @user.FirstName @user.LastName</text>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-12">@Html.ActionLink("Leave Household", "Leave", "Households", null, new { @class = "btn btn-primary" })</div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    Send Invite
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Invite", "Households"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-control email-well">
                                
                                <div>
                                    @Html.TextBox("email", null, new { @placeholder = "Email Address" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class=" col-md-10">
                                    <input type="submit" value="Send" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
    </div>
</div>